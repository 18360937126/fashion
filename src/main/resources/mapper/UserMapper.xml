<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hysf.mapper.UserMapper">
    <select id="findUserByUsernameAndPassword" resultType="cn.hysf.model.User">
select * from user where username = #{username} and password = #{password}
    </select>

    <sql id="user-info">
        uid,username,password,email,birthday,address,account
    </sql>

    <insert id="regist">
        insert into user(username,password,email,birthday,address,account,touxiang) values(#{username},#{password},#{email},#{birthday},#{address},#{account},#{touxiang})
    </insert>

    <select id="findUserByUsername" resultType="cn.hysf.model.User">
select * from user where username = #{username}
    </select>

    <select id="findUserByUid" resultType="cn.hysf.model.User">
        select * from user where uid = #{uid}
    </select>

    <update id="uploadTouxiang">
        update user set touxiang = #{touxiang} where uid = #{uid}
    </update>

    <select id="findAllUser" resultType="cn.hysf.model.User">
        select * from user
    </select>

    <select id="selectPage" resultType="cn.hysf.model.User">
        select * from user
    </select>

    <delete id="deleteUserByUid">
        delete from user where uid = #{uid}
    </delete>
</mapper>